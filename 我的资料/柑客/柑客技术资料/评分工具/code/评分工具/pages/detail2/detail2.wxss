/* pages/detail/detail.wxss */

#detail {
  padding-top: 24rpx;
}

#detail h1 {
  text-align: center;
  color: #333;
  font-weight: bold;
  display: block;
  margin: 0 auto;
  width: 550rpx;
  font-size: 45rpx;
}

.item-row {
  width: 702rpx;
  box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
  background: #fff;
  padding: 40rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 36rpx;
}

.title {
  display: flex;
  align-items: center;
}

.title i {
  width: 4rpx;
  height: 36rpx;
  background: #2672ec;
  display: inline-block;
}

.title h2 {
  letter-spacing: 1rpx;
  margin-left: 24rpx;
  color: #2672ec;
  font-size: 32rpx;
}

/* ======================================= */

.people-list {
  margin-top: 40rpx;
  overflow: auto;
  height: 430rpx;
}

.people-list view {
  float: left;
  height: auto;
  margin: 0 20rpx 20rpx 0;
  background-color: #eff3f9;
  border-radius: 5px;
  padding: 13rpx 20rpx 13rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
}

.judges-list {
  margin-top: 40rpx;
}

.judges-list view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 150rpx;
  height: 152rpx;
  float: left;
}

.judges-list view text {
  width: 150rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  line-height: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 37rpx;
  line-height: 10rpx;
}

.judges-list image {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  border: 7rpx solid #e9f1fd;
}

.btns {
  width: 702rpx;
  margin: 40rpx auto 0 auto;
  display: flex;
  justify-content: space-around;
}

.btns button {
  font-size: 32rpx;
  color: #fff;
  width: 231rpx;
  line-height: 68rpx;
  height: 72rpx;
  box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
  border-radius: 5rpx;
  background: #2672ec;
  border: 1rpx solid #2672ec;
  margin-right: 36rpx;
  flex: 1;
}


.btns button:last-child {
  margin-right: 0;
}

.menu {
  z-index: 50;
  display: block;
  position: fixed;
  top: 20rpx;
  right: 25rpx;
  height: 72rpx;
  width: 72rpx;
}

.menu i {
  width: 36rpx;
  height: 4rpx;
  position: absolute;
  background: #2672ec;
}

.menu i:first-child {
  top: 18rpx;
  left: 18rpx;
}

.menu i:nth-child(2) {
  top: 28rpx;
  left: 18rpx;
}

.menu i:nth-child(3) {
  top: 38rpx;
  left: 18rpx;
}

/* ========================================= */

.menu-list {
  top: 45rpx;
  z-index: 50;
  position: absolute;
  width: 280rpx;
  height: 100rpx;
  right: 0;
  background: #fff;
  box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
  border: 1px solid #ccc;
  color: #333;
  text-align: center;
}

.menu-list view {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

.menu-list view:first-child {
  border-bottom: 1px solid #ccc;
}

.black {
  z-index: 49;
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
  font-weight: bold;
}

.no-data {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:24rpx;
  color:#999;
}