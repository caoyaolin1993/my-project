/* pages/application/application.wxss */
#application {
    padding-top: 36rpx;
}

#application h1 {
   text-align: center;
  color: #333;
  font-weight: bold;
  display: block;
  margin: 0 auto;
  width: 550rpx;
  font-size: 45rpx;
}

.item-row {
    width: 702rpx;
    box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
    background: #fff;
    padding: 40rpx;
    box-sizing: border-box;
    margin: 0 auto;
    margin-top: 36rpx;
}

.title {
    display: flex;
    align-items: center;
}

.title i {
    width: 4rpx;
    height: 36rpx;
    background: #2672ec;
    display: inline-block;
}

.title h2 {
    letter-spacing: 1rpx;
    margin-left: 24rpx;
    color: #2672ec;
    font-size: 32rpx;
}

/* ======================================= */
.people-list {
    margin-top: 40rpx;
    overflow: auto;
    height: 430rpx;
     -webkit-overflow-scrolling: touch;
}

.people-list view {
    float: left;
    height: auto;
    margin: 0 20rpx 20rpx 0;
    background-color: #eff3f9;
    border-radius: 5px;
    padding: 13rpx 20rpx 13rpx 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #666;
}


.judges-list {
    margin-top: 40rpx;
}

.judges-list image {
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
    border: 7rpx solid #e9f1fd;
    margin-right: 31rpx;
}

.btns {
    width: 702rpx;
    margin: 60rpx auto 0 auto;
    display: flex;
    justify-content: space-between;
}

.btns button {
    font-size: 32rpx;
    color: #fff;
    width: 702rpx;
    line-height: 68rpx;
    height: 72rpx;
    box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
    border-radius: 5rpx;
    background: #2672ec;
    border: 1rpx solid #2672ec;
}

.btns button[disabled]:not([type]) {
    background: #2672ec !important;
    opacity: .5;
    color: #fff;
}

.share-btn {
    z-index: 50;
    position: fixed;
    top: 15rpx;
    right: 24rpx;
    width: 72rpx;
    height: 72rpx;
    background-color: #2672ec;
    color: #ffffff;
    font-size: 20rpx;
    border-radius: 50%;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 24rpx;
}

/* ========================================= */
.menu-list {
    top: 45rpx;
    z-index: 50;
    position: absolute;
    width: 280rpx;
    height: 200rpx;
    right: 0;
    background: #fff;
    box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
    border: 1px solid #ccc;
    color: #333;
    text-align: center;
}

.menu-list view {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}

.menu-list view:first-child {
    border-bottom: 1px solid #ccc;
}

/* ================================================= */
.black {
    z-index: 60;
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, .5);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.black>view {
    width: 702rpx;
    height: 420rpx;
    background: #fff;
    box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.15);
    border-radius: 5px;
}

.item-row {
    box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
    background: #fff;
    padding: 40rpx;
    box-sizing: border-box;
    margin-bottom: 51rpx;
}

.item-row:last-child {
    margin-bottom: 0;
}

.item-row>input {
    margin-top: 16rpx;
    width: 622rpx;
    height: 78rpx;
    background: #f2f2f2;
    box-sizing: border-box;
    padding: 24rpx;
    font-size: 24rpx;
}

.item-row text {
    display: block;
    margin: 35rpx 0 ;
    font-size: 24rpx;
    line-height: 38rpx;
    color: #999999;
}

.item-row button {
    width: 100%;
    height: 96rpx;
    background: #2672ec;
    color: #fff;
    border-radius: 5rpx;
    margin-top: 0;
}

.item-row button[disabled]:not([type]) {
    height: 96rpx;
    color: #fff !important;
    border-radius: 5rpx;
    background: #2672ec !important;
    opacity: .1;
}
.close-btn{
    width: 96rpx;
	height: 96rpx;
    background: rgba(255, 255, 255, .3);
    color: #666666;
    border-radius: 50%;
    font-size: 48rpx;
    line-height: 96rpx;
}