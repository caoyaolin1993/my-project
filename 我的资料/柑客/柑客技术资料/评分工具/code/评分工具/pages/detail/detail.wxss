/* pages/detail/detail.wxss */

#detail {
  padding-top: 24rpx;
}

#detail h1 {
  text-align: center;
  color: #333;
  font-weight: bold;
  display: block;
  margin: 0 auto;
  width: 550rpx;
  font-size: 45rpx;
}

.item-row {
  width: 702rpx;
  box-shadow: 0px 2px 8px 0px rgba(25, 25, 25, 0.05);
  background: #fff;
  padding: 40rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 36rpx;
}

.title {
  display: flex;
  align-items: center;
}

.title i {
  width: 4rpx;
  height: 36rpx;
  background: #2672ec;
  display: inline-block;
}

.title h2 {
  letter-spacing: 1rpx;
  margin-left: 24rpx;
  color: #2672ec;
  font-size: 32rpx;
}

/* ======================================= */

.people-list {
  margin-top: 40rpx;
  overflow: auto;
  height: 270rpx;
}

.people-list view {
  float: left;
  height: auto;
  margin: 0 20rpx 20rpx 0;
  background-color: #eff3f9;
  border-radius: 5px;
  padding: 13rpx 20rpx 13rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
}

.judges-list {
  margin-top: 40rpx;
}

.judges-list view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 150rpx;
  height: 152rpx;
  float: left;
}

.judges-list view text {
  width: 150rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  line-height: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 37rpx;
}

.judges-list image {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  border: 7rpx solid #e9f1fd;
}
/* ============================================ */
.btnList{
  height: 100rpx;
  width: 550rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
button::after{ border: none; }
.btnList>view , .btnList>button{
  padding: none;
  border: none;
  background: none;
  outline: none;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
  color: #999;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  line-height: 20px;
}

.btnList>view:first-child::before{
  content: '';
  position: absolute;
  right: 0;
  top: 25rpx;
  height: 50rpx;
  background: #ccc;
  width: 4rpx;
}
.btnList>view:last-child::before{
  content: '';
  position: absolute;
  left: 0;
  top: 25rpx;
  height: 50rpx;
  background: #ccc;
  width: 4rpx;
}
.btnList>view>text,.btnList>button>text{
  font-size: 22rpx;
}
.btns, .btns_ {
  width: 702rpx;
  margin: 40rpx auto 0 auto;
  display: flex;
  justify-content: space-around;
}
.btns{
  position: relative;
  width: 600rpx;
  padding: 10rpx;
  height: 92rpx;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
}
.badge {
  position: absolute;
  left: 50%;
  margin-left: -85rpx;
  top: 0;
  background: #e00;
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
}

.btns button, .btns_ button {
  letter-spacing: 5rpx;
  display: flex;
  align-items: center;
  justify-content:  center;
  font-size: 28rpx;
  color: #fff;
  width: 222rpx;
  line-height: 90rpx;
  height: 90rpx;
  box-shadow: 0 3rpx 8rpx 2rpx rgba(38, 114, 236, .5);
  background: #2672ec;
  border: 1rpx solid #2672ec;
  border-radius: 50rpx;

}
.btns button:first-child{
  margin-right: 50rpx;
}
.btns button{
  flex: .8;
}
